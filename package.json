{
  "name": "zanata-ui",
  "version": "1.0.0",
  "description": "The Core UI for Zanata",
  "main": "./lib/index.js",
  "style": "./lib/index.css",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "build:lib": "babel src --out-dir lib & cssnext ./src/styles/index.css ./lib/styles/index.css & cssnext ./src/styles/index.css ./dist/zanata-ui.css --compress",
    "build:umd:min": "webpack src/index.js dist/zanata-ui.min.js --config webpack.config.production.js",
    "build": "npm run build:lib",
    "hot-dev-server": "npm run styleguide & npm run generate-svg-sprite && webpack-dev-server --config webpack.config.js --hot --progress --colors --inline --history-api-fallback",
    "styleguide": "./utils/extractCssComments/.bin/extractCssComments -i ./src/styles/index.css -o ./styleguide.md",
    "generate-svg-sprite": "svg-sprite -sD ./src/components/Icons --symbol-dest '' --ss icons.svg --si ./src/components/Icons/src/*.svg",
    "start": "npm run hot-dev-server"
  },
  "author": "Luke Brooker",
  "license": "MIT",
  "dependencies": {
    "babel-loader": "^5.3.2",
    "classnames": "^2.1.3",
    "lodash": "^3.10.1",
    "marked": "^0.3.5",
    "nets": "^3.1.0",
    "react": "^0.13.3",
    "react-hot-loader": "^1.2.8",
    "react-input-autosize": "^0.5.0",
    "shallowequal": "^0.2.2",
    "zanata-css-base": "lukebrooker/zanata-css-base"
  },
  "devDependencies": {
    "babel": "^5.8.21",
    "classnames": "^2.1.3",
    "css-loader": "^0.16.0",
    "cssnext": "^1.8.4",
    "cssnext-loader": "^1.0.1",
    "extract-text-webpack-plugin": "^0.8.2",
    "postcss": "^4.1.16",
    "postcss-import": "^6.2.0",
    "stats-webpack-plugin": "^0.2.1",
    "style-loader": "^0.12.3",
    "svg-sprite": "^1.2.9",
    "webpack": "^1.11.0",
    "webpack-dev-server": "^1.10.1"
  }
}
